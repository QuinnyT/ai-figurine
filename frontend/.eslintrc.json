{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "eslint-plugin-no-inline-styles"
    ],
    "rules": {
        "react/prop-types": "off"
    },
    "ignorePatterns": ["node_modules/*", "*.png", "character-assets/"]
}